<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lblue"
    tools:context=".sche"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="0dp">

        <View
            android:id="@+id/hb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/litdblue"
            ></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nutr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:textSize="23dp"
            android:textColor="@color/black"
            android:fontFamily="@font/raino"
            />


        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/calories"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/hb"
            android:layout_marginTop="50dp"
            android:id="@+id/n12"
            android:layout_marginBottom="25dp" />


        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/n1"
            android:text="@string/carbo"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"

            android:layout_below="@+id/n12"
            android:layout_marginBottom="25dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/protein"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:textSize="18sp"
            android:id="@+id/n2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/n1"
            android:layout_marginBottom="25dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/fats"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/n3"
            android:layout_below="@+id/n2"
            android:layout_marginBottom="25dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/vitamin1"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"

            android:id="@+id/n4"
            android:layout_below="@+id/n3"
            android:layout_marginBottom="25dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/mineral"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:textSize="18sp"
            android:id="@+id/n5"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/n4"
            android:layout_marginBottom="25dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/water"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:textSize="18sp"
            android:id="@+id/n6"
            android:layout_below="@+id/n5"
            android:layout_marginBottom="25dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/diet"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:id="@+id/n7"
            android:layout_below="@+id/n6"
            android:layout_marginBottom="25dp" />
        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/antio"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:id="@+id/n8"
            android:layout_below="@+id/n7"
            android:layout_marginBottom="25dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/probio"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/n9"
            android:layout_below="@+id/n8"
            android:layout_marginBottom="25dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/pre"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/n10"
            android:layout_below="@+id/n9"
            android:layout_marginBottom="25dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="@string/ess"
            android:backgroundTint="@color/litdblue"
            android:textColor="@color/black"
            android:fontFamily="@font/lemon"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:id="@+id/n11"
            android:layout_below="@+id/n10"
            android:layout_marginBottom="25dp" />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>