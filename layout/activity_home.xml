<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <View
        android:id="@+id/hb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/grey"></View>

    <!-- Your content below (in the bottom half of the screen) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEALTH HUB"
        android:fontFamily="@font/raino"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/gold"
        android:layout_marginTop="9dp"
        android:padding="10dp"
        android:id="@+id/half"
        />

    <Button
        android:id="@+id/fit"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/half"
        android:layout_marginTop="100dp"
        android:background="@color/t"
        android:drawableBottom="@drawable/bdum"
        android:drawablePadding="0dp"
        android:fontFamily="@font/coper"
        android:onClick="fit1"
        android:text="FITNESS"
        android:textColor="@android:color/white"
        android:textSize="18dp"


        />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/half"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:fontFamily="@font/coper"
        android:text="CARDIO"
        android:textSize="18dp"
        android:background="@color/t"
        android:textColor="@android:color/white"
        android:onClick="car"
        android:id="@+id/card"
        android:drawableBottom="@drawable/cr"
        android:drawablePadding="0dp"
       />
    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fit"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/coper"
        android:text="FOODS"
        android:textSize="18dp"
        android:background="@color/t"
        android:textColor="@android:color/white"
        android:onClick="foods"
        android:id="@+id/food"
        android:drawableBottom="@drawable/food"
        android:drawablePadding="0dp"
        />
    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="200dp"
        android:fontFamily="@font/coper"
        android:text="Nutri"
        android:textSize="18dp"
        android:background="@color/t"
        android:textColor="@android:color/white"
        android:onClick="nutrition"
        android:id="@+id/nutri"
        android:drawableBottom="@drawable/nutri"
        android:drawablePadding="0dp"
        />
    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/coper"
        android:text="CALCIFY"
        android:textSize="18dp"
        android:background="@color/t"
        android:textColor="@android:color/white"
        android:onClick="calculator"
        android:id="@+id/calc"
        android:drawableBottom="@drawable/calc"
        android:drawablePadding="0dp"
        />
    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nutri"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="200dp"
        android:fontFamily="@font/coper"
        android:text="Studies"
        android:textSize="18dp"
        android:background="@color/t"
        android:textColor="@android:color/white"
        android:onClick="studeis"
        android:id="@+id/stud"
        android:drawableBottom="@drawable/stud"
        android:drawablePadding="8dp"
        />

</RelativeLayout>
