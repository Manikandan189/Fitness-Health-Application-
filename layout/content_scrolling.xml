<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nested111"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_marginTop="20dp"
        android:id="@+id/nested11"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="10dp">

            <!-- Include your card layouts or other components here -->
            <include layout="@layout/card" android:id="@+id/c1" />
            <include layout="@layout/card" android:id="@+id/c2" />
            <include layout="@layout/card"
                android:id="@+id/c3" />
            <include layout="@layout/card"
                android:id="@+id/c4" />
            <include layout="@layout/card"
                android:id="@+id/c5" />
            <include layout="@layout/card"
                android:id="@+id/c6" />
            <include layout="@layout/card"
                android:id="@+id/c7" />
            <include layout="@layout/card"
                android:id="@+id/c8" />
            <!-- Add more card layouts as needed -->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/ppp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:progressTint="#3498db"
        android:visibility="visible" />
    <View
        android:id="@+id/hb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="#435098"></View>

    <!-- Your content below (in the bottom half of the screen) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEALTH HUB"
        android:fontFamily="@font/raino"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="9dp"
        android:padding="10dp"
        android:id="@+id/half"
        />

</RelativeLayout>
