<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foodhome"
    android:background="@color/lgreen"
    >
    <View
        android:id="@+id/hb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/litdgreen"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foods"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:fontFamily="@font/raino"
        />
    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="@string/pro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/litdgreen"
        android:fontFamily="@font/lemon"
        android:textSize="14dp"
        android:id="@+id/pb1"
        />
    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="@string/fib"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_below="@+id/pb1"
        android:backgroundTint="@color/litdgreen"
        android:fontFamily="@font/lemon"
        android:textSize="14dp"
        android:id="@+id/fb1"
        />
    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="@string/fat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_below="@+id/fb1"
        android:backgroundTint="@color/litdgreen"
        android:fontFamily="@font/lemon"
        android:textSize="14dp"
        android:id="@+id/fab1"
        />
    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="@string/carb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_below="@+id/fab1"
        android:backgroundTint="@color/litdgreen"
        android:fontFamily="@font/lemon"
        android:textSize="14dp"
        android:id="@+id/carb1"
        />
    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="@string/wat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_below="@+id/carb1"
        android:backgroundTint="@color/litdgreen"
        android:fontFamily="@font/lemon"
        android:textSize="14dp"
        android:id="@+id/watb1"
        />
</RelativeLayout>